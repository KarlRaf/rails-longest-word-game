<h1>New Game</h1>

<div class="letters"><% @letters.each do |letter| %>
   <%= letter %>
  <% end %>
</div>
<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="word" placeholder="Gimme your longest word?">
  <input type="submit">
  <input id="token" name="token" type="hidden" value="<%= @letters %>">
</form>
